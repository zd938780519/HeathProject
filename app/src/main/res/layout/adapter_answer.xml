<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_offset_38dp"
        android:background="@drawable/shape_btn_anhei"
        android:layout_marginTop="@dimen/item_offset_10dp"
        android:layout_marginLeft="@dimen/item_offset_5dp"
        android:layout_marginRight="@dimen/item_offset_5dp">


        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="病史"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/item_offset_10dp"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/item_offset_14sp" />


    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>



</LinearLayout>