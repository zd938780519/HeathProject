<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f3f3f3">



    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
    
    
    
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_1">
    
    
                <RelativeLayout
                    android:id="@+id/rl_backIamge"
                    android:layout_width="@dimen/item_offset_30dp"
                    android:layout_height="@dimen/item_offset_30dp"
                    android:layout_marginLeft="@dimen/item_offset_10dp"
                    android:layout_marginTop="@dimen/item_offset_20dp">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/nav_back_2" />
    
                </RelativeLayout>
    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的"
                    android:layout_marginTop="@dimen/item_offset_23dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_body_17sp" />
    
    
    
    
            </RelativeLayout>
    
            <!--<ImageView-->
                <!--android:id="@+id/iv_head"-->
              <!---->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@mipmap/img_avatar_3"/>-->


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_head"
                android:layout_marginTop="@dimen/item_offset_136dp"
                android:layout_marginLeft="@dimen/item_offset_15dp"
                android:layout_width="@dimen/item_offset_90dp"
                android:layout_height="@dimen/item_offset_90dp"
                android:src="@mipmap/img_avatar_3"/>
    
            <TextView
                android:id="@+id/tv_name"
                android:layout_below="@+id/iv_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_offset_24dp"
                android:layout_marginTop="@dimen/item_offset_6dp"
                android:text="运动小哥"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/text_body_17sp" />
    
    
    
            <LinearLayout
                android:layout_below="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_offset_22dp"
                android:layout_marginTop="@dimen/item_offset_8dp"
                android:layout_marginLeft="@dimen/item_offset_24dp">
    
                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:textColor="@color/color_888888"
                    android:textSize="@dimen/item_offset_14sp" />
    
    
                <View
                    android:layout_width="@dimen/item_offset_1dp"
                    android:layout_height="@dimen/item_offset_12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/item_offset_10dp"/>
    
    
                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23岁"
                    android:layout_marginLeft="@dimen/item_offset_8dp"
                    android:textColor="@color/color_888888"
                    android:textSize="@dimen/item_offset_14sp" />
    
    
            </LinearLayout>


    
            <ImageView
                android:id="@+id/iv_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_offset_180dp"
                android:layout_marginRight="@dimen/item_offset_15dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/img_xgzl_1"/>


    
    
    
        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/rl_ceshi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_offset_45dp"
            android:background="@color/white"
            android:layout_marginTop="@dimen/item_offset_5dp">
    
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的测试"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/item_offset_15dp"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/item_offset_15sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/item_offset_15dp"
                android:background="@mipmap/icon_jr_3"/>
    
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_offset_1dp"
            android:layout_marginLeft="@dimen/item_offset_15dp"
            android:background="@color/color_f3f3f3"/>




        <android.support.design.widget.TabLayout
            android:id="@+id/tab_watch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_offset_40dp"
            app:layout_scrollFlags="scroll"
            app:tabIndicatorColor="@color/color_20d195"
            app:tabSelectedTextColor="@color/color_20d195"
            android:background="@color/white"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabTextColor="@color/color_222222" />


        <android.support.v4.view.ViewPager
            android:id="@+id/vp_watch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_offset_250dp"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <ImageView
            android:id="@+id/iv_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/item_offset_20dp"
            android:layout_marginTop="@dimen/item_offset_20dp"
            android:background="@mipmap/btn_tczh_20"/>



    </LinearLayout>





    </android.support.v4.widget.NestedScrollView>
</LinearLayout>