<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="@dimen/item_offset_40dp"
            android:layout_height="@dimen/item_offset_40dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/item_offset_15dp"
                android:background="@mipmap/back"/>

        </LinearLayout>




        <android.support.design.widget.TabLayout
            android:id="@+id/tab_watch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_offset_40dp"
            app:layout_scrollFlags="scroll"
            app:tabIndicatorColor="@color/color_20d195"
            app:tabSelectedTextColor="@color/color_20d195"
            android:background="@color/white"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabTextColor="@color/color_222222" />

    </LinearLayout>





    <android.support.v4.view.ViewPager
        android:id="@+id/vp_watch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />



</LinearLayout>