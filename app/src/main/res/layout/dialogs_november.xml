<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_btn_white10">




    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/item_offset_28dp"
        android:layout_marginRight="@dimen/item_offset_28dp"
        android:gravity="center"
        android:layout_height="wrap_content">




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身高"
                android:layout_marginTop="@dimen/item_offset_26dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/color_20d195"
                android:textSize="19sp" />


            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_offset_20dp"
                android:layout_marginRight="@dimen/item_offset_20dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/icon_c_2"/>

        </RelativeLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_offset_30dp">
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身高"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/item_offset_15sp" />


            <EditText
                android:id="@+id/et_hight"
                android:layout_width="@dimen/item_offset_120dp"
                android:layout_height="@dimen/item_offset_40dp"
                android:layout_marginLeft="@dimen/item_offset_12dp"
                android:inputType="number|numberDecimal"
                android:background="@drawable/shape_btn_back"/>

            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="m"
                android:textColor="@color/color_666666"
                android:layout_marginLeft="@dimen/item_offset_8dp"
                android:textSize="@dimen/item_offset_15sp" />
        </LinearLayout>




        <ImageView
            android:id="@+id/iv_que"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/item_offset_30dp"
            android:layout_marginBottom="@dimen/item_offset_28dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/btn_qd_xz_13"/>

    </LinearLayout>

</LinearLayout>