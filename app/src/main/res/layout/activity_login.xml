        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/item_offset_8dp"
        android:text="@string/userlogin"
        android:textColor="@color/black"
        android:textSize="@dimen/item_offset_17sp" />





    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/item_offset_40dp"
        android:layout_marginRight="@dimen/item_offset_40dp"
        android:layout_marginTop="@dimen/item_offset_30dp"
        android:paddingLeft="@dimen/item_offset_10dp"
        android:background="@drawable/shape_btn_white_black"
        android:hint="请填写您的手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:maxLines="1"
        android:textColor="@color/color_1A1B1F"
        android:textColorHint="@color/color_A6A6A6"
        android:textSize="14sp" />


    <RelativeLayout
